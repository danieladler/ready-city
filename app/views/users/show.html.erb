<h1> My Profile </h1>
<div class="profile-block">
  <h2 class="title title-profile-block"> My Home </h2>
  <form action="/assessment/update_home" method="post">
    <input name="utf8" type="hidden" value="âœ“">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
    <p class="description description-form">
      Enter details about your home.
    </p>
    <div class="form-group">
      <label for="text_field">Street Address</label>
      <input type="text" class="text_field" name="street_address" value="<%#= @home.street_address %>">
    </div>
    <div class="form-group">
      <label for="text_field">City</label>
      <input type="text" class="text_field" name="city" value="<%#= @home.city %>">
    </div>
    <div class="form-group">
      <label for="text_field">State</label>
      <input type="text" class="text_field" name="state" value="<%#= @home.state %>">
    </div>
    <div class="form-group">
      <label for="text_field">Zip</label>
      <input type="text" class="text_field" name="zip" value="<%#= @home.zip %>">
    </div>
    <div class="form-group">
      <label for="home_type">House or Apartment?</label>
      <label>
        <input type="radio" class="radio" name="home_type" value="house" <%#= 'checked' if @home.is_house %>>
        House
      </label>
      <label>
        <input type="radio" class="radio" name="home_type" value="apartment" <%#= 'checked' unless @home.is_house %>>
        Apartment
      </label>
    </div>
    <div class="form-group">
      <label for="floor_dropdown">Number of Floors (including basement):</label>
      <select name="floor_count" value="<%#= @home.structure["floors"] %>">
        <option value="1" <%#='selected' if @home.structure["floors"] == 1 %>>1</option>
        <option value="2" <%#='selected' if @home.structure["floors"] == 2 %>>2</option>
        <option value="3" <%#='selected' if @home.structure["floors"] == 3 %>>3</option>
        <option value="4" <%#='selected' if @home.structure["floors"] == 4 %>>4</option>
      </select>
    </div>
    <div class="form-group">
      <label for="year_built">Year Built</label>
      <input type="text" class="text_field" name="year_built" value="<%#= @home.structure["year_built"] %>">
    </div>
    <input type="submit" value="Save Home">
  </form>
</div>
<div class="profile-block">
  <h2 class="title title-profile-block"> Account Details </h2>
  <ul>
    <li> username: <%= @user.username %> </li>
    <li> email: <%= @user.email %> </li>
    <li> member since: <%= @user.created_at %> </li>
  </ul>
</div>
