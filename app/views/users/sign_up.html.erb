<h1 class="title"> Create Account </h1>
<div class="wrapper wrapper-sign-up">
  <%= form_for @user, class: 'form form-sign-up' do |f|  %>
    <div class="form-group form-group-stretch">
      <%= f.text_field :username, class: "input-clear input-stretch input-sign-in", placeholder: 'username' %>
    </div>
    <div class="form-group form-group-stretch">
      <%= f.text_field :email, class: "input-clear input-stretch input-sign-in", placeholder: 'email' %>
    </div>
    <div class="form-group form-group-stretch">
      <%= f.password_field :password, class: "input-clear input-stretch input-sign-in", placeholder: 'password' %>
    </div>
    <div class="form-group form-group-stretch">
      <%= f.password_field :password_confirmation, class: "input-clear input-stretch input-sign-in", placeholder: 'password confirmation' %>
    </div>
    <div class="form-group form-group-stretch form-group-submit">
      <button class="button button-sign-in" type="submit"> Sign Up </button>
    </div>
  <% end %>
</div>
