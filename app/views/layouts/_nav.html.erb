<header class="navigation" style="width: 100%; height: 100px; background-color: gray">
  <a href="/" style="float: left; width: 80px; height: 80px; padding: 10px">
    <div class="logo" style="text-align: center; padding: 25px 0; font-size: 24px; background-color: orange">
       RC
    </div>
  </a>
  <% if logged_in? %>
    <ul style="float: right; margin: 0; padding: 10px 10px 0 0">
      <li> Hello, <%= current_user.username %></li>
      <li>
        <a href="/sign-out"> Sign Out </a>
      </li>
    </ul>
  <% else %>
    <div class="nav-form-wrapper" style="float: right; width: 80px; height: 80px; padding: 10px">
      <%= form_tag sign_in_path do %>
        <input type="email", name="email", placeholder="email">
        <input type="password", name="password", placeholder="password">
        <input type="submit", value="Sign In">
      <% end %>
    </div>
    <a href="./sign-up" style="float: right; width: 80px; height: 80px; padding: 10px">
      <div class="link" style="text-align: center">
        Sign Up
      </div>
    </a>
  <% end %>
</header>
