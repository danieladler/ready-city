<h2 class="title" style="border-top: 1px solid black; padding-top: 10px"> My Home </h2>
<form action="/update_home" method="post">
  <input name="utf8" type="hidden" value="âœ“">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
  <p class="description description-form">
    Enter details about your home.
  </p>
  <div class="form-group">
    <label for="address">Street Address</label>
    <input type="text" class="text_field" name="address" id="address" value="<%= @home.address %>">
  </div>
  <div class="form-group">
    <label for="city">City</label>
    <input type="text" class="text_field" name="city" id="city" value="<%= @home.city %>">
  </div>
  <div class="form-group">
    <label for="state">State</label>
    <input type="text" class="text_field" name="state" id="state" value="<%= @home.state %>">
  </div>
  <div class="form-group">
    <label for="zip">Zip</label>
    <input type="text" class="text_field" name="zip" id="zip" value="<%= @home.zip %>">
  </div>
  <div class="form-group">
    <label for="is_house">House or Apartment?</label>
    <label>
      <input type="radio" class="radio" name="is_house" value="true" <%= 'checked' if @home.is_house %>>
      House
    </label>
    <label>
      <input type="radio" class="radio" name="is_house" value="false" <%= 'checked' unless @home.is_house %>>
      Apartment
    </label>
  </div>
  <div class="form-group">
    <label for="florr_count">Number of Floors (including basement):</label>
    <select name="floor_count" value="<%= @home.floor_count %>">
      <option value="1" <%='selected' if @home.floor_count == 1 %>>1</option>
      <option value="2" <%='selected' if @home.floor_count == 2 %>>2</option>
      <option value="3" <%='selected' if @home.floor_count == 3 %>>3</option>
      <option value="4" <%='selected' if @home.floor_count == 4 %>>4</option>
    </select>
  </div>
  <div class="form-group">
    <label for="year_built">Year Built</label>
    <input type="text" class="text_field" name="year_built" value="<%= @home.year_built %>">
  </div>
  <input type="submit" value="Save Home">
</form>
