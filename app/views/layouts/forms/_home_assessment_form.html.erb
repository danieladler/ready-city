<% if @home %>
  <h2 class="title"> My Home </h2>
  <p class="description description-form">
    Enter details about your home.
  </p>
  <%= form_for @home, url: update_home_path, method: :patch do |f| %>
    <div class="form-group">
      <%= f.label :address, "Street Address" %>
      <%= f.text_field :address %>
    </div>
    <div class="form-group">
      <%= f.label :city, "City" %>
      <%= f.text_field :city %>
    </div>
    <div class="form-group">
      <%= f.label :state, "State" %>
      <%= f.text_field :state %>
    </div>
    <div class="form-group">
      <%= f.label :zip, "Zip" %>
      <%= f.text_field :zip %>
    </div>
    <div class="form-group">
      <div class="title title-form-group"> House or Apartment? </div>
      <%= f.label :is_house, "House" %>
      <%= f.radio_button :is_house, true %>
      <%= f.label :is_house, "Apartment" %>
      <%= f.radio_button :is_house, false %>
    </div>
    <div class="form-group">
      <%= f.label :floor_count %>
      <%= f.select :floor_count, [['1'], ['2'], ['3'], ['4']] %>
    </div>
    <div class="form-group">
      <%= f.label :year_built, "Year Built" %>
      <%= f.text_field :year_built %>
    </div>
    <%= f.submit %>
  <% end %>
<% end %>
