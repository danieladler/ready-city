<h1> Create Account </h1>
<div class="create-user-form">
  <%= form_for @user do |f|  %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_area :username %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_area :email %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
